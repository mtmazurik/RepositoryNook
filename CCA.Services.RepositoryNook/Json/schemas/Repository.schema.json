{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://www.cloudcomputingassociates.com/schemas/Repository.schema.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "app",
    "repository",
    "collection",
  ],
  "properties": {
    "_id": {
      "$id": "#/properties/_id",
      "type": "string",
      "title": "The _id Schema",
      "default": "",
      "examples": [
        "5c5b7c622d09c501cf23b59e"
      ],
      "pattern": "^(.*)$"
    },
    "keyName": {
      "$id": "#/properties/keyName",
      "type": "string",
      "title": "The Keyname Schema",
      "default": "",
      "examples": [
        "flightNumber"
      ],
      "pattern": "^(.*)$"
    },
    "keyValue": {
      "$id": "#/properties/keyValue",
      "type": "string",
      "title": "The Keyvalue Schema",
      "default": "",
      "examples": [
        "560"
      ],
      "pattern": "^(.*)$"
    },
    "tags": {
      "$id": "#/properties/tags",
      "type": "array",
      "title": "The Tags Schema",
      "items": {
        "$id": "#/properties/tags/items",
        "type": "object",
        "title": "The Items Schema",
        "required": [
          "name",
          "value"
        ],
        "properties": {
          "name": {
            "$id": "#/properties/tags/items/properties/name",
            "type": "string",
            "title": "The Name Schema",
            "default": "",
            "examples": [
              "planeType"
            ],
            "pattern": "^(.*)$"
          },
          "value": {
            "$id": "#/properties/tags/items/properties/value",
            "type": "string",
            "title": "The Value Schema",
            "default": "",
            "examples": [
              "A09"
            ],
            "pattern": "^(.*)$"
          }
        }
      }
    },
    "createdDate": {
      "$id": "#/properties/createdDate",
      "type": "null",
      "title": "The Createddate Schema",
      "default": null,
      "examples": [
        null
      ]
    },
    "createdBy": {
      "$id": "#/properties/createdBy",
      "type": "string",
      "title": "The Createdby Schema",
      "default": "",
      "examples": [
        "mtmazurik"
      ],
      "pattern": "^(.*)$"
    },
    "modifiedDate": {
      "$id": "#/properties/modifiedDate",
      "type": "null",
      "title": "The Modifieddate Schema",
      "default": null,
      "examples": [
        null
      ]
    },
    "modifiedBy": {
      "$id": "#/properties/modifiedBy",
      "type": "string",
      "title": "The Modifiedby Schema",
      "default": "",
      "examples": [
        "mtmazurik"
      ],
      "pattern": "^(.*)$"
    },
    "app": {
      "$id": "#/properties/app",
      "type": "string",
      "title": "The App Schema",
      "default": "",
      "examples": [
        "FlightBook"
      ],
      "pattern": "^(.*)$"
    },
    "repository": {
      "$id": "#/properties/repository",
      "type": "string",
      "title": "The Repository Schema",
      "default": "",
      "examples": [
        "flight-db"
      ],
      "pattern": "^(.*)$"
    },
    "collection": {
      "$id": "#/properties/collection",
      "type": "string",
      "title": "The Collection Schema",
      "default": "",
      "examples": [
        "flights"
      ],
      "pattern": "^(.*)$"
    },
    "validate": {
      "$id": "#/properties/validate",
      "type": "boolean",
      "title": "The Validate Schema",
      "default": false,
      "examples": [
        false
      ]
    },
    "schemaId": {
      "$id": "#/properties/schemaId",
      "type": "string",
      "title": "The Schemaid Schema",
      "default": "",
      "examples": [
        "http://cloudcomputingassociates/schemas/Flight.json.schema"
      ],
      "pattern": "^(.*)$"
    },
    "data": {
      "$id": "#/properties/data",
      "type": "string",
      "title": "The Data Schema",
      "default": "",
      "examples": [
        "{ \"flight\" : { \"flightNumber\" : \"580\", \"dayOfWeek\" : \"Monday\",\"manufacturer\":\"Boeing\", \"planeType\":\"777x\" }}"
      ],
      "pattern": "^(.*)$"
    }
  }
}
